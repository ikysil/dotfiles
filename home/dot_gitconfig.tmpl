[include]
    path = ~/.gitconfig.d/base
    path = ~/.gitconfig.d/alias

[core]
    autocrlf = input
    pager = delta --dark

[user]
    name = {{ .name }}
    email = {{ .email }}

[color]
    ui = auto

[sequence]
    editor = interactive-rebase-tool

[url "git@github.snooguts.net:"]
    insteadOf = https://github.snooguts.net/

[safe]
    # shared cargo installs
    directory = /opt/cargo/registry/index/github.com-1ecc6299db9ec823/

