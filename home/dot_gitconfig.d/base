[core]
    excludesfile = ~/.gitconfig.d/excludes
    attributesfile = ~/.gitconfig.d/attributes
    compression = -1
    whitespace = blank-at-eol,blank-at-eof,space-before-tab,tab-in-indent

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true

[init]
    defaultBranch = main

[svn]
    rmdir = true

[branch]
    autosetuprebase = always
    autosetupmerge = true

[fetch]
    prune = true

[push]
    default = upstream

[diff]
    renames = copies
    mnemonicprefix = true
    renameLimit = 131072

[merge]
    stat = true

[http]
    sslverify = false
    postBuffer = 524288000

[credential]
    helper = cache --timeout=18000

[commit]
    template = ~/.gitconfig.d/commit.template

[delta]
    line-numbers = true
